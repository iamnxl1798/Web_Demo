@model ICollection<DuAn.Models.Account>
<table class="datatable-table" style="display: block; " id="data_table">
    <thead class="datatable-head">
        <tr class="datatable-row" style="left: 0px;">
            <th class="datatable-cell-left datatable-cell datatable-cell-sort">
                <span style="width: 40px;">#</span>
            </th>
            <th class="datatable-cell datatable-cell-sort">
                <span style="width: 158px;">Username</span>
            </th>
            <th class="datatable-cell datatable-cell-sort">
                <span style="width: 158px;">Contact</span>
            </th>
            <th class="datatable-cell datatable-cell-sort">
                <span style="width: 200px;">Address</i></span>
            </th>
            <th class="datatable-cell datatable-cell-sort">
                <span style="width: 158px;">Date of Birth</span>
            </th>
            <th class="datatable-cell datatable-cell-sort">
                <span style="width: 100px;">Role</span>
            </th>
            <th data-autohide-disabled="false" class="datatable-cell datatable-cell-sort">
                <span style="width: 100px;">ICode</span>
            </th>
            <th data-autohide-disabled="false" class="datatable-cell datatable-cell-sort">
                <span style="width: 130px;">Actions</span>
            </th>
        </tr>
    </thead>
    <tbody class="datatable-body">
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr class="datatable-row" style="left: 0px;">
                <td class="datatable-cell">
                    <span style="width:40px">@Model.ElementAt(i).ID</span>
                </td>
                <td class="datatable-cell">
                    <span style="width: 158px;">
                        <div class="font-weight-bolder font-size-lg mb-0">@Model.ElementAt(i).Username</div>
                        <div class="font-weight-bold text-muted">@Model.ElementAt(i).Fullname</div>
                    </span>
                </td>
                <td class="datatable-cell">
                    <span style="width: 158px;">
                        <div>
                            <img src="~/phone.png" style="max-width: 20px; max-height:20px" /> @Model.ElementAt(i).Phone
                        </div>
                        <div>
                            <img src="~/email.png" style="max-width: 20px; max-height:20px" /> @Model.ElementAt(i).Email
                        </div>
                    </span>
                </td>
                <td class="datatable-cell">
                    <span style="width: 200px;">
                        @Model.ElementAt(i).Address
                    </span>
                </td>
                <td class="datatable-cell">
                    <span style="width: 158px;">
                        @Model.ElementAt(i).DOB.ToShortDateString()
                    </span>
                </td>
                <td class="datatable-cell" style="padding-left: -20px">
                    <span style="width: 100px;">
                        @Model.ElementAt(i).RoleAccount.Role
                    </span>
                </td>
                <td class="datatable-cell">
